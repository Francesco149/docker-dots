# this config is still a work in progress

set_from_resource $main_font mainFont "pango:monospace"
set_from_resource $main_font_xft mainFontXft "monospace"
set_from_resource $main_font_pango mainFontPango "pango:monospace"

set $mod Mod4
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "A"

exec --no-startup-id \
  "i3-msg 'workspace A; append_layout ~/.config/i3/workspace-A.json'"
for_window [class="qutebrowser"] move workspace $ws1
for_window [class="icecat"] move workspace $ws1
for_window [class="Icecat"] move workspace $ws1
for_window [class="IceCat"] move workspace $ws1
for_window [title="Save Image"] floating enable, resize set 50 ppt 50 ppt
for_window [title="Save As"] floating enable, resize set 50 ppt 50 ppt
for_window [title="Terminal settings"] floating enable, resize set 50 ppt 50 ppt
for_window [class="Firefox"] move workspace $ws1
for_window [class="Telegram"] move workspace $ws10
#for_window [title="term-htop"] move workspace $ws10
for_window [title="term-ssh"] move workspace $ws2
#for_window [title="term-ssh"] fullscreen
for_window [title="term-rtorrent"] move workspace $ws9
for_window [class="mpv"] floating enable
for_window [instance="mpv_tiled"] floating disable
for_window [class="spacefm"] floating enable
for_window [class="xgarbage"] floating enable
for_window [instance="osu!.exe"] \
  floating enable, \
  move position 353 0
for_window [title="osu!lazer"] \
  floating enable, \
  resize set 1280 1024, \
  move position 353 0

for_window [title="term-scratch"] \
  floating enable, \
  resize set 50 ppt 50 ppt, \
  move scratchpad

bindsym $mod+grave \
  [title="term-scratch"] \
  scratchpad show, \
  move position center

set $chatterino_closed_y -60
set $chatterino_closed_size 150

for_window [class="chatterino"] \
  floating enable, \
  resize set 350 $chatterino_closed_size, \
  move position 0 $chatterino_closed_y, \
  sticky enable

bindsym $mod+bracketleft \
  [class="chatterino"] \
  resize set 350 px 95 ppt, \
  move position 10 10

bindsym $mod+bracketright \
  [class="chatterino"] \
  resize set 350 $chatterino_closed_size, \
  move position 0 $chatterino_closed_y, \
  focus tiling

exec --no-startup-id url-open
exec --no-startup-id chatterino
exec --no-startup-id Telegram
exec --no-startup-id \
  sleep 3 && i3-sensible-terminal -fn $main_font -fb $main_font \
    -title "term-htop" -e htop
exec --no-startup-id \
  sleep 3 && i3-sensible-terminal -fn $main_font -fb $main_font \
    -title "term-ssh" \
    -e ssh -Y 192.168.1.2 -t "tmux a; bash"
exec --no-startup-id \
  sleep 3 && i3-sensible-terminal -fn $main_font -fb $main_font \
    -title "term-rtorrent" \
    -e ssh -p 23 -Y 192.168.1.2 -t "tmux a; bash"
exec --no-startup-id wallpaper
exec --no-startup-id \
  i3-sensible-terminal -fn $main_font -fb $main_font \
    +tr -title "term-scratch"

font "$main_font"
bindsym $mod+d exec dmenu_run -fn "$main_font_xft"

default_border pixel
default_floating_border pixel
floating_modifier $mod
bindsym $mod+Return exec i3-sensible-terminal -fn $main_font -fb $main_font
bindsym $mod+Shift+q kill
