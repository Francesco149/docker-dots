  [class="chatterino"] \
  resize set 350 px 95 ppt, \
  move position 10 10

bindsym $mod+bracketright \
  [class="chatterino"] \
  resize set 350 $chatterino_closed_size, \
  move position 0 $chatterino_closed_y, \
  focus tiling

